<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="welcome_screen_first_text_labl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
</style>


        <style name="button">
                <item name="android:layout_width">150dp</item>
                <item name="android:layout_height">60dp</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">10dp</item>
                <item name="android:gravity">center</item>
                <item name="android:textStyle">bold</item>
                <item name="android:padding">14dp</item>

        </style>

        <style name="searchbutton">
                <item name="android:layout_width">150dp</item>
                <item name="android:layout_height">40dp</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">15dp</item>
                <item name="android:textStyle">bold</item>
                <item name="android:padding">5dp</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:textAlignment">center</item>


        </style>


        <style name="editetxt" parent="ThemeOverlay.Material3.TextInputEditText">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:singleLine">true</item>
        </style>

        <style name="lableStyle">
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:textColor">@color/black</item>
                <item name="android:padding">5dp</item>
        </style>
        <style name="valueStyle">
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:textColor">@color/black</item>
                <item name="android:padding">5dp</item>

        </style>

        <style name="download_style">
                <item name="android:layout_width">100dp</item>
                <item name="android:layout_height">45dp</item>
                <item name="android:layout_margin">10dp</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:gravity">center</item>
                <item name="android:textAlignment">center</item>
                <item name="background">@color/appcolour</item>
        </style>


        <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
                <item name="colorAccent">@color/appcolour</item>
        </style>

</resources>